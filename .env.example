# TaskFlow - Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# ===== Supabase Configuration =====
# Get these values from: https://supabase.com/dashboard/project/_/settings/api
VITE_SUPABASE_PROJECT_ID="your_project_id_here"
VITE_SUPABASE_PUBLISHABLE_KEY="your_publishable_key_here"
VITE_SUPABASE_URL="https://your-project-id.supabase.co"
VITE_SUPABASE_SECRET_KEY="your_secret_key_here"

# ===== Firebase Configuration =====
# Optional: Firebase configuration if using Firebase for hosting/additional services
# Get these values from: https://console.firebase.google.com/project/_/settings/general
# FIREBASE_PROJECT_ID="your_firebase_project_id"
# FIREBASE_API_KEY="your_firebase_api_key"

# ===== Development Settings =====
# Set to 'development' for local development, 'production' for production builds
VITE_ENVIRONMENT="development"

# ===== API Configuration =====
# Base URL for API calls (if needed)
# VITE_API_URL="http://localhost:3001"

# ===== Authentication Settings =====
# JWT expiration time in hours
# VITE_JWT_EXPIRY_HOURS=24

# ===== Security Configuration =====
# CORS allowed origins (comma-separated)
# VITE_ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# ===== Feature Flags =====
# Enable/disable experimental features
# VITE_ENABLE_ANALYTICS=false
# VITE_ENABLE_BETA_FEATURES=false

# ===== Logging =====
# Log level: 'debug', 'info', 'warn', 'error'
# VITE_LOG_LEVEL="info"

# ===== Database Connection Pool =====
# Maximum number of database connections
# DATABASE_POOL_SIZE=20

# ===== Email Configuration (Optional) =====
# For email notifications/features
# VITE_SMTP_HOST="smtp.gmail.com"
# VITE_SMTP_PORT=587
# VITE_SMTP_USER="your-email@gmail.com"
# VITE_SMTP_PASSWORD="your-app-password"

# ===== Monitoring & Analytics (Optional) =====
# For Sentry, Posthog, or other monitoring services
# VITE_SENTRY_DSN="https://your-sentry-url"
# VITE_ANALYTICS_ID="your-analytics-id"

# ===== Rate Limiting =====
# API rate limit requests per minute
# VITE_RATE_LIMIT_REQUESTS=100
# VITE_RATE_LIMIT_WINDOW_MS=60000
